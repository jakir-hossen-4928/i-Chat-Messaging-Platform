
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Profile images
    match /profileImages/{userId}/{imageId} {
      // Anyone can view profile images
      allow read: if true;
      // Only the owner can upload their own profile image
      allow write: if request.auth != null && request.auth.uid == userId &&
                    request.resource.contentType.matches('image/.*') &&
                    request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    // Chat images
    match /chatImages/{chatId}/{imageId} {
      // Only chat participants can view and upload images
      allow read, write: if request.auth != null &&
                          exists(/databases/$(database)/documents/chats/$(chatId)/participants/$(request.auth.uid)) &&
                          request.resource.contentType.matches('image/.*') &&
                          request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Group chat images
    match /groupChatImages/{groupId}/{imageId} {
      // Only group members can view and upload images
      allow read, write: if request.auth != null &&
                          exists(/databases/$(database)/documents/groupChats/$(groupId)/members/$(request.auth.uid)) &&
                          request.resource.contentType.matches('image/.*') &&
                          request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Call recordings (if needed in the future)
    match /callRecordings/{callId}/{recordingId} {
      // Only call participants can access recordings
      allow read, write: if request.auth != null &&
                          exists(/databases/$(database)/documents/calls/$(callId)/participants/$(request.auth.uid)) &&
                          request.resource.size < 50 * 1024 * 1024; // 50MB max
    }
  }
}
